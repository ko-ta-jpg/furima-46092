<% if user_signed_in? %>
  <span class="user-nickname"><%= current_user.nickname %> さん</span>
  <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "logout-btn" %>
<% else %>
  <%= link_to "新規登録", new_user_registration_path, class: "sign-up-btn" %>
  <%= link_to "ログイン", new_user_session_path, class: "login-btn" %>
<% end %>