<%= render "shared/header" %>

<div class="item-show">
  <div class="item-box">
    <h2 class="name"><%= @item.name %></h2>

    <%# 画像 %>
    <% if @item.image.attached? %>
      <%= image_tag @item.image, class: "item-box-img" %>
    <% else %>
      <%= image_tag "item-sample.png", class: "item-box-img" %>
    <% end %>

    <%# 価格・配送料 %>
    <div class="item-price-box">
      <div class="item-price"><%= number_with_delimiter(@item.price) %>円</div>
      <div class="item-postage"><%= @item.shipping_fee.name %></div>
    </div>

    <%# 購入/編集系ボタン（購入機能は後で実装） %>
    <div class="option item-actions" style="margin-bottom: 20px; gap: 16px;">
      <% if user_signed_in? && current_user == @item.user %>
        <%= link_to '商品の編集', '#', class: 'item-red-btn' %>
        <%= link_to '削除', '#', class: 'item-destroy',
                data: { turbo_confirm: '削除してよろしいですか？' } %>
      <% elsif user_signed_in? && current_user != @item.user %>
        <%= link_to '購入画面に進む', '#', class: 'item-red-btn' %>
      <% end %>
    </div>

    <%# 説明 %>
    <div class="item-explain-box">
      <%= simple_format(@item.description) %>
    </div>

    <%# 詳細テーブル %>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= @item.user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= @item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">商品の状態</th>
          <td class="detail-value"><%= @item.status.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送元の地域</th>
          <td class="detail-value"><%= @item.prefecture.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送日の目安</th>
          <td class="detail-value"><%= @item.schedule.name %></td>
        </tr>
      </tbody>
    </table>

    <%# お気に入り/違反報告（見た目だけ） %>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png", class: "favorite-star-icon" %> お気に入り 0
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png", class: "report-flag-icon" %> 不適切な商品の報告
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>