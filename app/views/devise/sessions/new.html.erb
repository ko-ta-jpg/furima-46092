<%= render "shared/second-header" %>

<%= form_with(
      scope: resource_name,                                # => :user
      url: session_path(resource_name),                    # => /users/sign_in
      method: :post,
      data: { turbo: false },                              # Turbo無効でリダイレクト挙動を安定
      class: 'registration-main',
      local: true
    ) do |f| %>

  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報入力
      </h1>
    </div>

    <!-- フラッシュメッセージ（エラーや「ログアウトしました」など） -->
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <!-- メールアドレス -->
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email,
            class: "input-default",
            id: "email",
            placeholder: "PC・携帯どちらでも可",
            autofocus: true,
            autocomplete: "email" %>
    </div>

    <!-- パスワード -->
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password,
            class: "input-default",
            id: "password",
            placeholder: "",
            autocomplete: "current-password" %>
    </div>

    <!-- ログインボタン -->
    <div class='login-btn'>
      <%= f.submit "ログイン", class: "login-red-btn" %>
    </div>
  </div>
<% end %>

<%= render "shared/second-footer" %>